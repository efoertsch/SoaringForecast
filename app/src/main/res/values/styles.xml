<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!-- cardviewStyle added hear to get past rendering problem on view layout -->
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="forecastLabel" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_half</item>
    </style>

    <style name="forecastData" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:layout_marginEnd">@dimen/margin_half</item>
    </style>

    <style name="nav_drawer_primary_item_style" parent="AppTheme">
        <item name="android:paddingStart">@dimen/nav_drawer_item_padding_start</item>
        <item name="android:paddingEnd">@dimen/nav_drawer_item_padding_end</item>
        <item name="android:paddingTop">@dimen/nav_drawer_item_padding_top</item>
        <item name="android:paddingBottom">@dimen/nav_drawer_item_padding_bottom</item>
        <item name="android:layout_marginEnd">@dimen/nav_drawer_item_margin_end</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ButtonPrimaryWhite" parents="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">@dimen/margin_standard</item>
        <item name="android:background">@drawable/rounded_rectangle_primary</item>
    </style>

    <style name="DividerSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/dividerColor</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="DividerSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/DividerSpinnerStyle</item>
    </style>


    <!-- used for text label above spinner -->
    <style name="TextView.ForSpinnerLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
    </style>

    <!-- used to keep text easily readable on turnpoint edit screen even if textedit disabled -->
    <style name="turnpointEditStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/turnpoint_edit_text_color_selector</item>
    </style>


</resources>
