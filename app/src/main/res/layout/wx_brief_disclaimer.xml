<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="WxBriefDisclaimerView">
        <variable
            name="viewModel"
            type="org.soaringforecast.rasp.one800wxbrief.WxBriefViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/margin_double"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/wx_brief_buttons"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wx_brief_disclaimer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:text="@{viewModel.getWxBriefDisclaimer()}"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <CheckBox
                    android:id="@+id/wx_brief_disclaimer_do_not_show_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onCheckedChanged="@{(v, checked) -> viewModel.doNotShowDisclaimerAgain(checked)}"
                    android:text="@string/wx_brief_do_not_show_again" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/wx_brief_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollView1"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/wx_brief_disclaimer_cancel"
                style="@style/ButtonPrimaryWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_standard"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="@string/cancel"
                 />

            <Button
                android:id="@+id/wx_brief_disclaimer_continue"
                style="@style/ButtonPrimaryWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_standard"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="@string/default_continue" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>